<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">


        <TextView
            android:id="@+id/tx_cant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweatherbold"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Quiz Finish"
            android:textColor="#1A1824"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tx_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_cant"
            android:fontFamily="@font/merriweatherregular"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:text=""
            android:textColor="#1A1824"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tx_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_total"
            android:fontFamily="@font/merriweatherregular"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:text=""
            android:textColor="#1A1824"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tx_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/tx_correct"
            android:fontFamily="@font/merriweatherregular"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:text=""
            android:textColor="#1A1824"
            android:textSize="16sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tx_wrong"
    android:weightSum="2"
    android:orientation="horizontal">

        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_payment_method"
            android:fontFamily="@font/merriweatherbold"
            android:layout_centerInParent="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_btn_green"
            android:clickable="true"
            android:layout_margin="3dp"
            android:focusable="true"
            android:layout_weight="1"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="Try Again"
            android:textColor="#FFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_confirm_order"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:clickable="true"
            android:fontFamily="@font/merriweatherbold"
            android:focusable="true"
            android:layout_margin="3dp"
            android:background="@drawable/bg_btn_red"
            android:layout_weight="1"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="Quit"
            android:textColor="#FFF"
            android:textSize="15sp" />

</LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>